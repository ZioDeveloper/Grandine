@model IEnumerable<Grandine.Models.CommesseXClienti>

@{
    ViewBag.Title = "Index";
}

<br />
<h4>Gestione associazione Commesse / Clienti</h4>
<br />

<p>
    @Html.ActionLink("Inserisic nuova associazione", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clienti.Codice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commesse.Codice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clienti.Codice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commesse.Codice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<br />
@Html.ActionLink("Torna a pagina principale", "LoginInUse", "Home", new { aCodiceUtente = Session["UserName"].ToString() }, new { @class = "btn btn-primary" })