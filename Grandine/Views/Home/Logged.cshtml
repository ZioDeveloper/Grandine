@model Grandine.Models.HomeModel

@{
    ViewBag.Title = "Utente autenticato";
}
<br />
<h4>Utente autenticato</h4>
<br />
<div>
    @{var item = Model.Utenti.ToList();}

    Benvenuto <b>@item[0].Nome  @item[0].Cognome</b>
    <br />
    Utente di classe : <b>@ViewBag.DescrizioneClasse</b>
    <br />
    
</div>
<br />


<br />
<div>
    <table border="0">
        <thead>
            Clienti attualmente attivi :
        </thead>
        <tbody>
            @foreach (var itemC in Model.Clienti)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => itemC.Codice)
                </td>
                <td>
                    &nbsp;-&nbsp;
                </td>
                <td>
                    @Html.DisplayFor(modelItem => itemC.RagioneSociale)
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>

<br />
<div>
    Seleziona Cliente : @Html.DropDownList("SearchLocation", (SelectList)ViewData["Clienti"], new { @class = "form-control", @onchange = "this.form.submit();" })
</div>
<br />
<div>
    <button type="submit" class="btn btn-primary">Vai a gestione dati</button>
</div>
