<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Gestione Concessionari", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @try
                    {
                        if (!String.IsNullOrEmpty(Session["UserName"].ToString()))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Angrafiche<b class="caret"></b></a>
                                <ul class="dropdown-menu">

                                    <li><a>@Html.ActionLink("Status", "Index", "Status")</a></li>
                                    <li><a>@Html.ActionLink("Bisarchisti", "Index", "Bisarchistas")</a></li>
                                    <li><a>@Html.ActionLink("Clienti", "Index", "Clientis")</a></li>
                                    <li><a>@Html.ActionLink("Città", "Index", "Cittas")</a></li>
                                    <li><a>@Html.ActionLink("Tecnici", "Index", "Tecnicis")</a></li>
                                    @*<li><a>@Html.ActionLink("Andamento giornaliero PSA", "AndamentoGiornaliero", "Grafici", new { Gestione = "PSA" }, null)</a></li>
        <li><a>@Html.ActionLink("Andamento dello scarto", "AndamentoScarto", "Grafici", new { Gestione = "PSA" }, null)</a></li>*@
                                </ul>
                            </li>
                            <li>
                                @Html.ActionLink("Reports", "Menu", "Home")
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dati ispezione<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a>@Html.ActionLink("Dati telaio", "Index", "BrowTelai")</a></li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        }
                        else
                        {
                            @*<li>@Html.ActionLink("Login", "Login", "Home")</li>*@
                        }
                    }
                    catch
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gestione Concessionari</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
